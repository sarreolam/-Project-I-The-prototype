<%- include('../partials/header');%>

<div class="top-div">

  <div class="container-fluid text-center log-in-input-div">
    <div class="row justify-content-center log-in-inputs">
      <div class="col-6">
        <h3>Log in</h3>
      </div>
      <div class="col-12 form-container">

        <form action="/log-in" method="post" class="log-in-form">

          
            <div class="row justify-content-center">
              <div class="col-12 col-md-8 ">
                <input type="user" name="user" placeholder="User" />
              </div>
   
              
     
              <div class="col-12 col-md-8">
                <input type="password" name="pass" placeholder="Password"/>
              </div>
              
              <div class="col-12 col-md-8">
                <button type="submit">Sing in</button>
              </div>  
            </div>

        </form>
        <%if (locals.error){%>
          <div class="log-in-error"><%=error%></div>
        <%}%>

      </div>
    </div>  
        
  </div>
</div>

<%- include('../partials/footer');%>